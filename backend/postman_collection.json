{
  "info": {
    "name": "Company Registration API",
    "description": "API collection for Company Registration & Verification Module",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Password123!\",\n  \"full_name\": \"Test User\",\n  \"gender\": \"m\",\n  \"mobile_no\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "response": []
        },
        {
          "name": "Verify Mobile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 1,\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/verify-mobile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-mobile"]
            }
          },
          "response": []
        },
        {
          "name": "Verify Email",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/auth/verify-email/1",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-email", "1"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Company Management",
      "item": [
        {
          "name": "Register Company",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company_name\": \"Tech Innovations Inc\",\n  \"address\": \"123 Innovation Drive\",\n  \"city\": \"San Francisco\",\n  \"state\": \"California\",\n  \"country\": \"United States\",\n  \"postal_code\": \"94105\",\n  \"website\": \"https://techinnovations.com\",\n  \"industry\": \"Technology\",\n  \"founded_date\": \"2020-01-15\",\n  \"description\": \"A leading technology company focused on innovative solutions.\",\n  \"social_links\": {\n    \"linkedin\": \"https://linkedin.com/company/tech-innovations\",\n    \"twitter\": \"https://twitter.com/techinnovations\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/company/register",
              "host": ["{{baseUrl}}"],
              "path": ["company", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Get Company Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/company/profile",
              "host": ["{{baseUrl}}"],
              "path": ["company", "profile"]
            }
          },
          "response": []
        },
        {
          "name": "Update Company Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company_name\": \"Tech Innovations Corp\",\n  \"description\": \"Updated description for our innovative technology company.\",\n  \"website\": \"https://newtechinnovations.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/company/profile",
              "host": ["{{baseUrl}}"],
              "path": ["company", "profile"]
            }
          },
          "response": []
        },
        {
          "name": "Upload Company Logo",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "logo",
                  "type": "file",
                  "src": "/path/to/logo.png"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/company/upload-logo",
              "host": ["{{baseUrl}}"],
              "path": ["company", "upload-logo"]
            }
          },
          "response": []
        },
        {
          "name": "Upload Company Banner",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "banner",
                  "type": "file",
                  "src": "/path/to/banner.png"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/company/upload-banner",
              "host": ["{{baseUrl}}"],
              "path": ["company", "upload-banner"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      },
      "response": []
    }
  ]
}
